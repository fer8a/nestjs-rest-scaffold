{
  "testTimeout": 10000,
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/../src/$1"
  },
  "globals": {
    "ts-jest": {
      "astTransformers": {
        "before": ["<rootDir>/utils/ast-transformer.ts"]
      }
    }
  }
}
